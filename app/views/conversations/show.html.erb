<div class="container">
  <div class="row text-center">
    <%= render partial: 'messages/message', collection: @conversation.messages, as: :message %>
    <%= simple_form_for([@conversation, @message]) do |f| %>
      <%= f.input :content %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

<script>
  App['conversation_<%= @conversation.id %>'] = App.cable.subscriptions.create(
    { channel: 'ConversationsChannel', conversation_id: <%= @conversation.id %> },
    { received: (data) => console.log(data) }
  )
</script>
