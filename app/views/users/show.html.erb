<section class="flat-row flat-imagebox style3">
  <div class="container">
    <div class="wrap-imagebox style3">
      <div class="row">
        <div class="col-sm-12">
          <div class="imagebox style2">
            <div class="box-imagebox">
              <div class="box-header">
                <div class="box-image">
                  <% if @user.avatar? %>
                  <%= cl_image_tag @user.avatar, class: 'full-img' %>
                  <% else %>
                  <%= cl_image_tag @user.avatar.default_url, class: 'full-img' %>
                  <% end %>
                </div>
              </div><!-- /.box-header -->
              <div class="box-content">
                <div class="box-title ad">
                  <%= @user.full_name %>
                  <% if @user.confirmed? %>
                    <i class="fa fa-check-circle" aria-hidden="true"></i>
                  <% end %>
                  <div class="queue">
                    Joined <%= @user.created_at.strftime("%A, %b %d") %>
                  </div>
                </div>
                <ul class="rating">
                  <% if @user.spaces.any? %>
                    <li>
                      <%= @user.spaces.count %> spaces
                    </li>
                  <% end %>
                </ul>
                <div class="box-desc">
                  <p>
                    <%= @user.bio %>
                  </p>
                  <p>
                    <i class="fas fa-comments"></i>
                    <%= link_to "Chat", conversations_path(host_id: @user.id), method: :post %>
                  </p>
                </div>
                <ul class="location">
                  <li>
                    <%= @user.address %>
                  </li>
                  <li>
                    <%= @user.country %>
                  </li>
                  <li>
                    <% if policy(@user).edit? %>
                    <li>
                      <%= link_to "Edit", edit_user_path(@user) %>
                    </li>
                    <li>
                      <%= link_to "Change Registration Details", edit_user_registration_path(@user) %>
                    </li>
                    <% end %>
                  </li>
                </ul>
              </div><!-- /.box-content -->
            </div><!-- /.box-imagebox -->
          </div><!-- /.imagebox style2 -->
        </div><!-- /.col-sm-12 -->
      </div><!-- /.row -->
    </div>
  </div><!-- /.container -->
</section><!-- /.flat-imagebox style3 -->

<section class="flat-map-zoom-in">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="col-md-6 col-xs-12">
          <div class="wrap-imagebox style1 scrollbox" id="space-container">
            <%= render partial: 'spaces/space', collection: @user.spaces, as: :space %>
          </div><!-- /.wrap-imagebox -->
        </div><!-- /.flat-filter -->
      <div class="col-md-6 col-xs-12">
        <section class="flat-row flat-explore-detail">
          <div class="container">
            <div class="row">
              <div class="col-md-8">
                <div class="comment-area">
                  <h3 class="comment-title"><%= pluralize 'review', @user.reviews.count %> </h3>
                  <ol class="comment-list">
                    <%= render partial: 'reviews/review', collection: @user.reviews, as: :review %>
                  </ol><!-- /.comment-list -->
                </div><!-- /.comment-area -->
              </div><!-- /.col-md-8 -->
            </div><!-- /.row -->
          </div><!-- /.container -->
        </section><!-- /.flat-explore-detail <-->
      </div><!-- /.col-md-6 -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</section><!-- /.flat-map-zoom-in -->







