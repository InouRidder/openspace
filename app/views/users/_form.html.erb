<%= simple_form_for current_user, html: {class: 'form-listing'} do |f| %>
<div class="inner-box form">
  <div class="wrap-listing one-half">
    <%= f.input :first_name %>
  </div><!-- /.wrap-listing -->
  <div class="wrap-listing one-half">
    <%= f.input :last_name %>
  </div><!-- /.wrap-listing -->
  <div class="clearfix"></div>
  <div class="wrap-listing location">
    <%= f.input :bio %>
  </div><!-- /.wrap-listing -->
  <div class="clearfix"></div>
</div><!-- /.inner-box -->

<div class="inner-box form">
  <div class="wrap-listing one-half">
    <%= f.input :address, input_html: { id: 'space_address_autocomplete', placeholder: "Location" } %>
  </div><!-- /.wrap-listing -->
  <div class="wrap-listing one-half">
    <%= f.input :country %>
  </div><!-- /.wrap-listing -->
  <div class="clearfix"></div>
</div><!-- /.inner-box -->

<div class="inner-box style3">
  <div class="one-half">
    <label>Your profile picture</label>
    <div class="browse">
      <p>Drag & Drop files here</p>
      <span>or</span>
      <div class="upload">
        <span>
          <%= f.input :avatar %>
          <%= f.input :avatar_cache, as: :hidden %>
        </span>
      </div>
    </div>
  </div><!-- /.one-half -->
  <div class="one-half centered">
    <% if current_user.avatar? %>
      <%= cl_image_tag current_user.avatar, class: 'half-img' %>
    <% else %>
      <%= cl_image_tag current_user.avatar.default_url, class: 'half-img' %>
    <% end %>
  </div>
  <div class="clearfix"></div>
</div><!-- /.inner-box -->

<div class="inner-box style3">
    <button class="submit-form-listing" type="submit">Save & Preview</button>
    <div class="clearfix"></div>
</div>
<% end %>
