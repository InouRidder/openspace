<div class="header header_sticky">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="header-wrap">
          <div id="logo" class="logo">
            <a href="<%= root_path %>" title="">
              OpenSpace
            </a>
          </div><!-- /.logo -->
          <div class="nav-wrap">
            <nav id="mainnav" class="mainnav">
             <ul class="menu">
              <li>
                <a href="/spaces" title=""><%= t('search') %></a>
              </li>

              <!-- User signed in-->
              <% if user_signed_in? %>
              <li>
                <%= link_to t('navbar.bookings'), "#" %>
              </li>
              <li>
                <%= link_to t('navbar.messages'), conversations_path, id: 'conversation-button' %>
                <ul class="submenu">
                  <% current_user.conversations.each do |conversation| %>
                    <li>
                      <%= link_to conversation_path(conversation) do %>
                        <%= conversation.last_message(current_user).content %>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </li>
              <li>
                <%= link_to t('navbar.log_out'), destroy_user_session_path, method: :delete  %>
              </li>

              <!-- User not signed in -->
              <% else %>
              <div class="button-header">
                <%= link_to new_space_path do %>
                <i class="ti-plus"></i>
                <%= t('list_your_space') %>
                <% end %>
              </div>
              <li>
                <%= link_to t('navbar.sign_up'),new_user_registration_path %>
              </li>
              <li>
                <%= link_to t('navbar.log_in'), new_user_session_path %>
              </li>
              <% end %>
            </ul>
          </nav><!-- /.mainnav -->
