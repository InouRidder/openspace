<% if user_signed_in? && favorited = current_user.favorited?(space) %>
  <%= link_to favorite_path(favorited), method: :delete do %>
    <p>
      <%= t('favorites.unfavorite') %>
      <i class="far fa-heart"></i>
    </p>
  <% end %>
<% else %>
  <%= link_to space_favorites_path(space), method: :post do %>
    <p>
      <%= t('favorites.favorite') %>
      <i class="fas fa-heart"></i>
    </p>
  <% end %>
<% end %>
