
<section class="page-title parallax parallax1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="page-title-heading">
          Your trip to
          <%= @booking.space.title %>
        </div>
        <ul class="breadcrumbs">
          <li>
            <a href="#"><%= @booking.space.address %></a>
            <span class="arrow_right"></span>
          </li>
        </ul>
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
  <div class="overlay"></div>
</section><!-- /.page-title -->

<section class="flat-row flat-price">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="price">
          <!-- /.price-box -->
          <div class="price-box basic col-xs-6">
            <div class="price-title">
              <h3>Booking Summary</h3>
            </div>
            <div class="price-header">
              <div class="price-number">
                <%= @booking.total_price %>
                <span>Total Booking</span>
              </div>
            </div>
            <div class="price-content">
              <ul>
                <li>Duration : <strong> <%= @booking.total_hours %> </strong> hours</li>
                <li>Total Price: <strong><%= @booking.total_price %></strong></li>
                <li>Billable address: <strong> <%= @booking.billable_adress %></strong></li>
              </ul>
              <% if @booking.confirmed? %>
              <div class="btn-more">
                <a href="#" title="">Confirmed! Waiting for <%= @space.user.full_name %> approval!</a>
              </div>
              <% else %>
                <div class="btn-more">
                  <%= link_to 'Confirm Booking', update_state_booking_path(@booking, state: 'confirmed'), method: :patch %>
                </div>
              <% end %>
            </div>
          </div><!-- /.price-box -->
          <div class="col-xs-6">
            <div id="map" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>">
            </div>
          </div><!-- /.col-md-6 -->
          <div class="clearfix"></div>
        </div><!-- /.price -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-price -->
