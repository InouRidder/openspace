<div class="imagebox">
  <div class="box-imagebox">
    <div class="box-header">
        <% photo = space.space_attachments.first.try(:photo) %>
      <div class="box-image capped-image" style="background: url('<%= cl_image_path photo if photo %>'); background-size: cover;">
      </div>
    </div><!-- /.box-header -->
    <div class="box-content">
      <div class="box-title ad">
        <span>Ad</span><a href="#" title=""><%= space.title %></a><i class="fa fa-check-circle" aria-hidden="true"></i>
      </div>
      <ul class="rating">
        <ul class="rating">
        <li>PER HOUR:<%= space.price_per_hour %></li>
        <li>CAPACITY: <%= space.capacity %></li>
      </ul>
      <div class="box-desc">
        <%= space.description %>
      </div>
    </div><!-- /.box-content -->
    <ul class="location">
      <li class="address"><span class="ti-location-pin"></span><%= space.address %></li>
    </ul><!-- /.location -->
  </div><!-- /.box-imagebox -->
</div><!-- /.imaegbox -->
